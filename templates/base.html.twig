<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Bright Challenge{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
    {% block stylesheets %}
        <!-- BOOTSTRAP CSS -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">
    {% endblock %}
</head>
<body class="col-lg-12" style="top: 20px">
{% block body %}

    <h1>Bright Challenge</h1>

    {{ form_start(form) }}

    <div class="form-group text-start">
        <label class="tx-medium">Get UK City Weather</label>
        {{ form_widget(form.city, {'attr': {'class': 'form-control city-autocomplete', 'placeholder': 'Enter a city name in the UK:', 'autocomplete': "off"}} ) }}
        <div class="col-lg-12">
            <ul class="dropdown-menu list-group" aria-labelledby="dropdownMenuButton">
                <!-- Dropdown items will be populated here -->
            </ul>
        </div>

    </div>
    {{ form_widget(form.submit, {'attr': { 'class': 'btn btn-primary btn-block'}} ) }}

    {{ form_end(form) }}
    <br>

    {# Get Operation success or errors #}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

{% endblock %}

</body>

{% block javascripts %}
    {% block importmap %}{{ importmap('app') }}{% endblock %}
    {{ include('scripts.html.twig') }}
{% endblock %}
</html>